{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Funbook",
	"version": "0.1.0",
	"identifier": "com.funbook.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../build"
	},
	"app": {
		"windows": [
			{
				"title": "Funbook",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["dmg", "msi", "deb", "appimage", "rpm"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/icon.ico"
		],
		"macOS": {},
		"linux": {},
		"windows": { "webviewInstallMode": { "type": "downloadBootstrapper" } }
	},
	"plugins": {
		"fs": {
			"requireLiteralLeadingDot": false
		}
	}
}
